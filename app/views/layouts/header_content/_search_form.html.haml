= form_tag products_path, method: :get, class: 'navbar-form navbar-right' do
  .input-group.category-search-drop-down
    = select_tag :category_id, options_for_select(session[:search_categories], params[:category_id]), include_blank: 'All Categories', class: 'form-control'
  .input-group
    = text_field_tag :product_key_word, params[:product_key_word], class: 'form-control', placeholder: 'Search Products'
    %span.input-group-btn
      = button_tag type: :submit, class: 'btn btn-default' do
        %i.fa.fa-search
