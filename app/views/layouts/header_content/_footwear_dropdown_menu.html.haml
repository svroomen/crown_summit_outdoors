    %li= link_to Category::HIKING_SHOES, products_path(category_name: Category::HIKING_SHOES, gender: Product::MALE)
    %li= link_to Category::RUNNING_SHOES, products_path(category_name: Category::RUNNING_SHOES, gender: Product::MALE)
    %li= link_to "All Men's Footwear", products_path(size_type: Product::FOOTWEAR_SIZE_TYPE, gender: Product::MALE)
