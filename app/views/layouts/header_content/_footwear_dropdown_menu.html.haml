    %li.dropdown-header= "Women's Footwear"
    %li= link_to Category::HIKING_BOOTS, products_path(category_name: Category::HIKING_BOOTS, gender: Product::FEMALE)
    %li= link_to Category::WINTER_BOOTS, products_path(category_name: Category::WINTER_BOOTS, gender: Product::FEMALE)
    %li= link_to Category::HIKING_SHOES, products_path(category_name: Category::HIKING_SHOES, gender: Product::FEMALE)
    %li= link_to Category::RUNNING_SHOES, products_path(category_name: Category::RUNNING_SHOES, gender: Product::FEMALE)
