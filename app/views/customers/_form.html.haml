.row
  .col-md-6.col-md-offset-3
    = form_for @customer, html: { class: 'form form-horizontal' } do |f|
      .form-group
        %label.control-label.col-md-3 First Name:
        .col-md-9
          = f.text_field :first_name, class: 'form-control', autofocus: true

      .form-group
        %label.control-label.col-md-3 Last Name:
        .col-md-9
          = f.text_field :last_name, class: 'form-control'

      .form-group
        %label.control-label.col-md-3 Country:
        .col-md-9
          = f.select :country_id, @countries, {prompt: 'Please select a country'}, {class: 'form-control'}

      .form-group
        %label.control-label.col-md-3 Province:
        .col-md-9
          = f.select :province_id, @provinces, {prompt: 'Please select a province'}, {class: 'form-control'}

      .form-group
        %label.control-label.col-md-3 City:
        .col-md-9
          = f.text_field :city, class: 'form-control'

      .form-group
        %label.control-label.col-md-3 Address:
        .col-md-9
          = f.text_field :address, class: 'form-control'

      .form-group
        %label.control-label.col-md-3 Postal Code:
        .col-md-9
          = f.text_field :postal_code, class: 'form-control'

      .form-group
        %label.control-label.col-md-3 Email:
        .col-md-9
          = f.text_field :email, class: 'form-control'

      .form-group
        %label.control-label.col-md-3 Password:
        .col-md-9
          = f.password_field :password, class: 'form-control'

      .form-group
        %label.control-label.col-md-3 Password Confirmation:
        .col-md-9
          = f.password_field :password_confirmation, class: 'form-control'

      .form-group
        .pull-right
          .customer-btn-group
            = button_tag type: :submit, class: 'btn btn-primary btn-md' do
              %i.fa.fa-share
              = @customer.new_record? ? 'Submit' : 'Update'

            = link_to @customer.new_record? ? home_index_path : @customer, class: 'btn btn-default btn-md' do
              %i.fa.fa-ban
              Cancel