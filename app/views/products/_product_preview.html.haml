.col-md-4.col-sm-6.col-xs-12
  .product-container
    .image-preview-container
      = link_to product_path(id: product.id) do
        = image_tag "#{product.image}", class: 'image-size-max'
    %hr
    .product-preview-info
      %h4= "$#{product.price}"
      %h4= link_to product.name, product_path(id: product.id)


